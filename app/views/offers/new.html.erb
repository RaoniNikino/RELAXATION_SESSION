<div class="container">
  <h1>Your offer</h1>
  <%= simple_form_for @offer do |f| %>
    <%= f.input :category %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.submit "Confirm", class: "btn btn-primary" %> <%= link_to "back", offers_path, class: "btn btn-secondary" %>
  <% end %>
</div>
