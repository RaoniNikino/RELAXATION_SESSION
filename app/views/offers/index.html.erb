<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1 class="text-center">Relaxation Offers</h1>
    </div>
 </div>
</div>
<div class="d-flex">
  <% @offers.each do |offer| %>
    <div class="card-offer">
      <img class="card-image" style="background-image: url(<%= asset_url("#{offer.category}")%>)" />
      <div class="card-offer-infos">
        <div>
          <h2><%= offer.name %></h2>
          <p><%= offer.category %></p>
          <p><%= link_to 'Details', offer_path(offer) %></p>
        </div>
        <h2 class="card-offer-pricing">Credit?</h2>
        <%# <img src="/app/assets/images/Lotus.png" class="card-offer-logo avatar-bordered" /> %>
      </div>
    </div>
  <% end %>
</div>

