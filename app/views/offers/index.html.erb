<div class="container">
    <div>
      <br>
      <h1 class="text-left">Discover our Offers</h1>
    </div>

   <div class="row">
    <div class="col-12 col-lg-8">
      <% @offers.each do |offer| %>
        <div class="card-offer">
          <div class="card-image">
            <%= cl_image_tag offer.photo.key, height: 150, width: 500, crop: :fill %>
          </div>
          <div class="card-offer-infos">
            <div>
              <h2 style="font-size: 20px;"><%= offer.name %></h2>
              <p style="font-size: 15px;"><%= offer.category %></p>
              <p class="btn btn-light" style="font-size: 12px;"><%= link_to 'Details', offer_path(offer), class:"black_link" %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="col-12 col-lg-4">
      <div id="map"
        style="width: 100%; height: 600px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      Hi, there
      </div>
    </div>
   </div>
</div>

<div style="display: flex; justify-content: space-between; margin: 15px;">
  <p class="text-left"><%= link_to "back", root_path, class: "btn btn-secondary", style:"font-size: 20px; padding-left: 20px; padding-right: 20px;" %>
</div>
